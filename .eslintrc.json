{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "ignorePatterns": ["lib/"],
  "plugins": ["jest"],
  "extends": ["airbnb-base", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
